<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#B6AEAE"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/cus_news">
        <ImageView
            android:id="@+id/itemAnhTin"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/itemNgayTin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-09-2021"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/itemTieuDeTin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ứng dụng công nghệ thông tin đẩy mạnh vận động hiến máu tình nguyện"
                android:textSize="15dp"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>