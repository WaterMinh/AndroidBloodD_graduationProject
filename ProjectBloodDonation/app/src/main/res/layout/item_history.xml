<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B6AEAE"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cus_news"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:background="@drawable/cir_info"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:text="Lần  "
                android:textColor="#ED1D1D"
                android:textSize="22dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/itemLanHien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/aclonica"
                android:text="1"
                android:textColor="#ED1D1D"
                android:textSize="22dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemNgayHien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16-02-2021"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lượng máu: "
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/itemLuongHien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="350"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cân nặng: "
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/itemCanNangHien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </LinearLayout>


            <TextView
                android:id="@+id/itemDiaDiemHien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dịch Vọng Hậu-Hà Nội"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/itemStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoàn thành"
                android:textColor="#D81E1E"
                android:textSize="20sp"
                android:layout_marginLeft="50dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>