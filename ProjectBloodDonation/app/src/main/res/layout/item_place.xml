<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:background="@drawable/sweet_home_logo"
        android:gravity="center"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemNoiDienRa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viện Huyết Học-Truyền máu TW"
            android:textSize="17sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/itemDiaChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2QFQ+V9X, P. Phạm Văn Bạch, Yên Hoà, Cầu Giấy, Hà Nội"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/itemNgayDienRa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16-09-2021"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:paddingLeft="20dp"
                android:id="@+id/itemGioDienRa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7:30 - 20:00"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>