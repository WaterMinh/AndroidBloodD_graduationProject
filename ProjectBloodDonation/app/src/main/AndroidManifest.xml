<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projectblooddonation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".utils.BkContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectBloodDonation">
        <activity android:name=".DetailNewsActivity"></activity>
        <activity android:name=".GiftInfo_Activity" />
        <activity android:name=".QuestionAnswer_Activity" />
        <activity android:name=".Contact_Activity" />
        <activity android:name=".Place_Activity" />
        <activity android:name=".BookPlace_Activity" />
        <activity
            android:name=".UserInfo_Activity"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".News_Activity" />
        <activity android:name=".RegisterDonate_Activity" />
        <activity android:name=".Notice_Activity" />
        <activity android:name=".ScreenLoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".History_Activity" />
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>